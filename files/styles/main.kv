<LoginScreen> 
    Image:
        source: '../assets/images/logo-negro.png'
        pos_hint: { "center_x": .5, "center_y": .8 }
        size_hint: { .6, .5 }
        
    BoxLayout:
        orientation: 'vertical'
        size_hint: { .6, .4 }
        pos_hint: { "center_x": .5, "y": .25 }
        padding: 15
        spacing: 10

        Label:
            text: 'Iniciar Sesión'
            font_size: '24sp'
            color: [ 0, 0, 0, 1 ]
            
        TextInput:
            id: user
            hint_text: 'Usuario'

        TextInput:
            id: pwd
            password: True
            hint_text: 'Contraseña'

        Button:
            id: login_btn
            text: 'Acceder'
            on_release: root.login(user.text, pwd.text)

        Label:
            id: status
            text: ''
            color: 1, 0, 0, 1

<HomeScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 30 
        
        Label:
            text: "Bienvenido, User!"
            font_size: '30sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .2, 'y': .25}
        
        Label:
            text: "Tablita en proceso"
            font_size: '18sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': .2, 'y': .6}

        BarChartWidget:
            size_hint: { .7, .5 }
            pos_hint: {'center_x': .3, 'y': .5}
        
